<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admins.AdminHomeActivity">
    <TextView
        android:id="@+id/admin_welcome_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Admin"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>

        <Button
            android:id="@+id/maintain_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/buttons"
            android:layout_below="@+id/admin_welcome_title"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Maintain Products"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/check_orders_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/buttons"
            android:layout_below="@+id/maintain_button"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Check new orders"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />
    <Button
        android:id="@+id/check_approve_products"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/buttons"
        android:layout_below="@+id/check_orders_button"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Approve new Products"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        />
        <Button
            android:id="@+id/admin_logout_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/buttons"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Logout"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />


</RelativeLayout>